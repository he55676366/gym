    <script>
    $('#submit').on('click', function() {
        var toArray = $('#login').serializeArray()
        jsonArray = serializeToJSON(toArray)
                 
        $.ajax({
            url: "/admin",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: jsonArray,
            success: function(res) {
                var res = JSON.parse(res)
                if(res.errno === 1) {
                    location.href = '/manage/member/1'
                } else if(res.errno === 0) {
                    alert("失敗1")
                }
            },
            error: function() {
                alert("錯誤1")
            }
        })
    })

    function serializeToJSON(toArray) {
        var toString = {};
        for(index in toArray){
            toString[toArray[index].name] = toArray[index].value;
